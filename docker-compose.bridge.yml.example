# Bridge 网络模式配置示例
# 适用于 Windows/macOS 或需要更安全网络隔离的场景
# 使用方法：复制此文件为 docker-compose.override.yml 或替换 docker-compose.yml

services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile.backend
    container_name: iptv-backend
    # 使用 bridge 网络（Windows/macOS 推荐）
    networks:
      - iptv-network
    cap_add:
      - NET_RAW
      - NET_ADMIN
    volumes:
      - iptv_out_data:/app/iptv_sever/out
      - iptv_state_data:/app/iptv_sever/api
    environment:
      - API_PORT=8088
      - API_HOST=0.0.0.0
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8088/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  frontend:
    build:
      context: .
      dockerfile: Dockerfile.frontend
    container_name: iptv-frontend
    networks:
      - iptv-network
    ports:
      - "80:80"
    depends_on:
      - backend
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s

networks:
  iptv-network:
    driver: bridge

volumes:
  iptv_out_data:
    driver: local
  iptv_state_data:
    driver: local
